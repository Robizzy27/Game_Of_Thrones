<!DOCTYPE html>
<html>
  <head>
    <title>Game of Thrones</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <!-- NHO: reminder to remove unused code  -->
      <%# if @current_user %>
      <%#= link_to "Welcome, #{@current_user.username}!", user_path(@current_user) %>
      <%#= link_to "Sign Out", session_path, method: :delete %>
      <h1>A Song of Ice and Fire</h1>
      <navbar>
        <%= link_to "Home", enrollments_path %> |
        <%= link_to "Kings", kings_path %> |
        <%= link_to "Regions", regions_path %> |
        <%= link_to "Houses", houses_path %> |
        <%= link_to "Characters", characters_path %> |
        <%= link_to "Enrollment", new_enrollment_path %></navbar>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
