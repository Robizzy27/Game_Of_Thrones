<div class="crow">
  <h2>Create a new character</h2>
  <%= image_tag "crow.jpg" %>
</div>
<%= form_for @character, url: {controller: :enrollments, action: :create} do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %>

  Select a <%= f.label :title %>:
  <%= f.select :title, ["A hedge Knight", "Prince", "Princess", "Maester", "Member of the Night's Watch", "Lady of house GA", "Lord Commander of the Assembly"] %>

  <p>
    Select a <%= f.label :house %>:
    <%= f.select(:house_id) do %>
      <% @houses.each do |house| %>
        <%= content_tag(:option, house.name, value: house.id) %>
      <% end %>
    <% end %>

    Upload your Photo:
    <%= f.select :image, ["arrynphoto.jpg", "baratheonphoto.jpg", "greyjoyphoto.jpg", "lannisterphoto.jpg", "starkphoto.jpg", "targaryenphoto.jpg", "tullyphoto.jpg", "martellphoto.jpg"] %>
  </p>

  <p>
    <p>What is your <%= f.label :story %>:</p>
    <%= f.text_area :story, :cols => 75, :rows => 10 %>
  </p>
  <%= f.submit "Enroll" %>
<% end %>
